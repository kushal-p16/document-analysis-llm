{
  "buildCommand": "cd ui-react && npm install && npm run build",
  "outputDirectory": "ui-react/dist",
  "framework": "vite",
  "regions": ["iad1"],
  "functions": {
    "api/index.py": {
      "runtime": "python3.11",
      "requirements": "requirements.txt"
    }
  },
  "rewrites": [
    {
      "source": "/upload",
      "destination": "/api/index.py"
    },
    {
      "source": "/ask",
      "destination": "/api/index.py"
    }
  ],
  "env": {
    "VITE_API_URL": ""
  }
}
